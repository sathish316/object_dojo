#!/usr/bin/env ruby

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'dojo'
require 'yaml'

options = YAML::load_file(File.expand_path(File.dirname(__FILE__) + '/../config/rules.yml'))
dojo = Dojo.new(ARGV[0])
dojo.validate(options['rules'])